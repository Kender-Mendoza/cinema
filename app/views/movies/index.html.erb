<p id="notice"><%= notice %></p>

<div class="container is-fluid mb-1" style="display:flex; justify-content:space-between">
  <h1 class="title">Peliculas</h1>
  <a href="<%= new_movie_path %>" class="button is-success is-outlined"><i class="fas fa-plus mr-1"></i> Nueva </a>
</div>

<div class="container">
    <% @movies.each do |movie| %>
      <div class="card">
        <a href="/movies/<%= movie.id %>" class="card__data">
          <img src="<%= movie.url_image %>" class="card__data__img card__data__img--movie">
          
          <div class="card__data__container">
            <span class="card__data__container__datetime">
              <%= I18n.l(movie.date_time_movie, format: '%A, %d de %B de %Y') %> |
              <%= movie.date_time_movie.strftime("%H:%M") %>
            </span>
            <br>
            
            <h2 class="card__data__container__name"><%= movie.name %></h2>
            
            <span class="card__data__container__duration">
              <strong>Duracion: </strong>
              <%= movie.duration.strftime("%H:%M") %>
            </span>

            <span class="card__data__container__cine">
              <strong>En: </strong>
              <%= movie.cine.name %>
            </span>
          </div>
        <a>
        <div class="card__operations">
          <%= link_to 'Edit', edit_movie_path(movie) %> |
          <%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>    
    <% end %>
  </div>
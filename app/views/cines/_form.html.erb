<div class="container is-fluid">
    <div style="width:300px">
        <%= form_with(model: cine, local: true) do |form| %>
        <% if cine.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(cine.errors.count, "error") %> prohibited this cine from being saved:</h2>

            <ul>
                <% cine.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul> 
        </div>
        <% end %>

        <div class="field">
            <%= form.label :name, class: "label"%>
            <div class="control">
                <%= form.text_field :name, class: "input" %>
            </div>
        </div>

        <div class="field">
            <%= form.label :phone, class: "label" %>
            <div class = "control">
              <%= form.number_field :phone, class: "input", max: "99999999", min:"10000000" %> <!-- Solucion rapida para que no rompa la aplicacion -->
            </div>
        </div>

        <div class="field">
            <%= form.label :url_image, class: "label" %>
            <div class = "control">
              <%= form.text_field :url_image, class: "input" %>
            </div>
        </div>

        <div class="actions control">
            <%= form.submit %>
        </div>
        <% end %>

    </div>
</div>
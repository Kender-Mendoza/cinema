<div class="container is-fluid mb-1" style="display:flex; justify-content:space-between">
  <h1 class="title">Catalogo</h1>
</div>

<div class="container is-fluid">
    <% @catalogue.each do |movie| %>
      <div class="mb-2 has-background-light is-relative py-2 px-2 animar" style="border-radius:5px">

        <a href="/movies/<%= movie.id %>" style="display:flex">

          <img src="<%= movie.url_image %>" style="width: 120px; height: 180px">
          
          <div class="ml-2 has-text-dark">
            <h2 class="subtitle"><%= movie.name %></h2>

            <span class="card__data__container__datetime">
              <%= I18n.l(movie.date_time_movie, format: '%A, %d de %B de %Y') %> |
              <%= movie.date_time_movie.strftime("%H:%M") %>
            </span>
            <br>
            
            
            <span class="card__data__container__duration">
              <strong>Duration: </strong>
              <%= movie.duration.strftime("%H:%M") %>
            </span>

            <span class="card__data__container__cine">
              <strong>In: </strong>
              <%= movie.cine.name %>
            </span>
          </div>
        </a>
      </div>    
    <% end %>
  </div>
